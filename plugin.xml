<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-ios-swift-test" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0">
  <name>cordova-plugin-ios-swift-test</name>

  <js-module name="helloSwift" src="www/helloSwift.js">
    <clobbers target="helloSwift"/>
  </js-module>

  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="helloSwift">
        <param name="ios-package" value="helloSwift"/>
      </feature>
    </config-file>
    <pods-config ios-min-version="10.0" use-frameworks="true"/>
    <pod id="SnapKit"/>
    <pod id="Kingfisher"/>
    <pod id="IQKeyboardManager"/>
    <pod id="MBProgressHUD" version="~> 1.1.0"/>
    <pod id="TensorFlowLiteSwift"/>

    <!-- Add in the plugin .swift files here -->
    <source-file src="src/ios/helloSwift.swift"/>
    <source-file src="src/ios/AppCenter.swift"/>
    <source-file src="src/ios/RecordViewController.swift"/>
    <!-- Add in the swift-support plugin by default -->
    <dependency id="cordova-plugin-add-swift-support" version="^2.0.2"/>
  </platform>
</plugin>
